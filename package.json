{
  "name": "makeflow-sdk-packages",
  "private": true,
  "repository": "https://github.com/makeflow/makeflow-sdk",
  "author": "Chengdu Mufan Technology Co., Ltd.",
  "scripts": {
    "build": "tsc --build tsconfig.build.json",
    "lerna:publish": "lerna publish prerelease --npm-tag latest --registry=https://registry.npmjs.org",
    "build:power-app": "typescript-json-schema --required --out bld/power-app/schema.json src/power-app/tsconfig.json PowerAppSchema",
    "lint-prettier": "prettier --check \"**/*.{ts,tsx,js,jsx,json,yml,md}\"",
    "lint": "yarn prettier --check \"**/*.{ts,tsx,js,jsx,json,yml,md}\" && yarn workspace makeflow-sdk lint && yarn workspace @makeflow/types lint",
    "link-types": "yarn workspace @makeflow/types link"
  },
  "devDependencies": {
    "@magicspace/configs": "^0.1.47",
    "@magicspace/tslint-rules": "^0.1.41",
    "@types/jsonschema": "^1.1.1",
    "@types/node": "^11.11.8",
    "@types/node-fetch": "^2.5.2",
    "@types/prompts": "^1.2.0",
    "@types/rc": "^1.1.0",
    "biu": "^0.2.20",
    "lerna": "^3.18.3",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "typescript": "^3.6.4",
    "typescript-json-schema": "^0.36.0"
  },
  "workspaces": {
    "packages": [
      "packages/cli",
      "packages/types"
    ]
  }
}
