{
  "name": "@makeflow/sdk",
  "version": "0.1.0-wip.4",
  "private": true,
  "description": "Makeflow SDK",
  "repository": "https://github.com/makeflow/makeflow-sdk",
  "author": "Chengdu Mufan Technology Co., Ltd.",
  "files": [
    "src/program/**/*.ts",
    "bld/**"
  ],
  "scripts": {
    "lerna:publish": "yarn build-ts && lerna publish prerelease --registry=https://registry.npmjs.org",
    "build-ts": "rimraf ./packages/**/bld && tsc --build tsconfig.full.json",
    "lint": "run-in-every eslint-project --echo --parallel -- eslint --config {configFileName} .",
    "lint-prettier": "prettier --check \"**/*.{ts,tsx,js,jsx,json,yml,md}\""
  },
  "devDependencies": {
    "@magicspace/configs": "^0.2.5",
    "@magicspace/eslint-plugin": "^0.1.32",
    "eslint": "^7.11.0",
    "gh-pages": "^3.1.0",
    "lerna": "^3.22.1",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "run-in-every": "^0.1.6",
    "typescript": "^4.1.2"
  },
  "workspaces": [
    "packages/*"
  ]
}
